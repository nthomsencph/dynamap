{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2020",
    "lib": ["ES2020"],
    "outDir": "../dist/scripts",
    "rootDir": ".",
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./**/*"],
  "exclude": ["../node_modules", "../dist"]
}
